<div class="card-saved">  <!-- create a card for each application -->
  <div class="card-saved-content">
    <h4><%= cover_letter.name %></h4> <!-- display the cover letter name -->
    <div class="d-flex">  <!-- create a flexbox for the company name and date with bootstrap -->
      <p><%= cover_letter.company %></p>  <!-- display the company name -->
      <p>&nbspâ€“ <%= cover_letter.created_at.strftime('%d/%m/%Y') %></p>   <!-- display the date and format the date, &nbsp is a space -->
    </div>
  </div>
  <div class="card-saved-buttons">  <!-- these get visibile when hovering (see in CSS) -->
    <%= link_to "<i class='fa-solid fa-download'></i>".html_safe, cover_letter_path(cover_letter, format: :pdf), class: "mx-3" %> <!-- create a download button for each cover letter -->
    <%= link_to "<i class='fa-regular fa-trash-alt'></i>".html_safe, cover_letter_path(cover_letter), data: { turbo_method: :delete, turbo_confirm: "Are you sure that you want to delete this Cover Letter?"} %> <!-- create a delete button for each cover letter, with a confirmation -->
  </div>
</div>
