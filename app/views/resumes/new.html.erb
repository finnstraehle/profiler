<div class="container-l"> <!-- create a container for the resumes -->
  <div class="header-page"> <!-- create a header for the resumes -->
    <h1>Save Current Resume</h1>
  </div>
  <%= render "shared/back_button" %>  <!-- render the back button -->
  <div class="sheet-application"> <!-- create a sheet for the resumes -->
    <%= simple_form_for(@resume) do |f| %>  <!-- create a form for the resumes -->
      <%= f.input :name %>  <!-- create an input field for the name -->
      <%= f.input :company %> <!-- create an input field for the company name -->
      <div class="d-flex" style="margin-top: 50px">
        <%= f.button :submit, class:"button", style:"margin: 0 auto" %> <!-- create a submit button -->
      </div>
    <% end %> <!-- end the form -->
  </div>
</div>
