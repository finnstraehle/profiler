<div class="cv-entry">
  <div class="cv-entry-header">
    <div>
      <p><strong><%= entry.title %></strong></p>
      <p><i><%= entry.subtitle %></i></p>
    </div>
    <div style="text-align: right">
      <p><strong><%= entry.start.strftime('%m/%Y') %>â€“<%= entry.end.strftime('%m/%Y') %></strong></p>
      <p><i><%= entry.location %></i></p>
    </div>
  </div>
  <li><%= entry.bullet_one %></li>
  <li style="margin-bottom: 10px"><%= entry.bullet_two %></li>
  <div class="cv-entry-buttons">
    <div class="icon-btn">
      <%= link_to "<i class='fa-solid fa-pen'></i>".html_safe, edit_resume_entry_path(entry) %>
    </div>
    <div class="icon-btn">
      <%= link_to "<i class='fa-regular fa-trash-alt'></i>".html_safe, resume_entry_path(entry), data: { turbo_method: :delete, turbo_confirm: "Are you sure that you want to delete this Entry?"} %>
    </div>
  </div>
</div>
